<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="scott.dao.demo.WeatherDao">

<!-- Result Map-->
<resultMap id="WeatherResultMap" type="scott.entity.demo.WeatherEntity" >
	<result column="DeviceID" property="DeviceID"/>
	<result column="Temperature" property="Temperature"/>
	<result column="Humidity" property="Humidity"/>
	<result column="WindDirection" property="WindDirection"/>
	<result column="WindSpeed" property="WindSpeed"/>
</resultMap>

<select id="getWeather" resultMap="WeatherResultMap" parameterType="Object">
	SELECT Temperature ,Humidity ,WindDirection ,WindSpeed  FROM  weather_data where SampleTime like #{time} Order by SampleTime DESC
</select>
</mapper>
